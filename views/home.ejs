<!-- node.js - ejs - Layout Partials -->
<%- include("partials/header"); -%>

<h1>Home</h1>

<p><%= startingContent %></p>

  <!-- Loop through the array posts and console log the title for each post -->
  <% myPosts.forEach(function(post){ %>

    <!-- Render the posts title and content to the home page -->
    <h1><%= post.title %> </h1>
    <p>
      <!-- Truncate the content using JS method substring -->
      <%= post.content.substring(0, 100) + " ... " %>

      <!-- Allow the user to click on the read more and redirect him to the specific blog page -->
      <a href="/posts/<%= post.title %>">Read More</a>
    </p>

    <!-- Console log the post title and content to the terminal -->
    <% console.log(post.title); %>
    <% console.log(post.content + "\n"); %>
  <% }); %>

